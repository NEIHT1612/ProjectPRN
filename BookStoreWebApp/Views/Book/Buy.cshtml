@{
    ViewData["Title"] = "Buy book";
    Layout = "~/Views/Shared/_LayoutMember.cshtml";
}
@model BusinessObject.Models.Book
@using BusinessObject.Models
<h1>Buy</h1>
<h1>@ViewBag.Message</h1>
<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Buy">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.BookImage)
                </dt>
                <dd class="col-sm-8">
                    <img src="@Html.DisplayFor(model => model.BookImage)" width="110px" height="150px" />
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.SerialNumber)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.SerialNumber)
                </dd>
                <dd class="col-sm-4">
                    Quantity
                </dd>
                <dt class="col-sm-8">
                    <input name="quantity" class="form-control" type="number" min="1" value="1" />
                </dt>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Category.CategoryName)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Category.CategoryName)
                </dd>
            </dl>
            <div class="form-group">
                <input type="submit" value="Buy" class="btn btn-primary" />
                <input type="hidden" name="memberid" value="@ViewBag.MemberId" />
                <input type="hidden" name="bookId" value="@Model.BookId" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">Back to HomePage</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
